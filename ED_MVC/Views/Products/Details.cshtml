@model ProductDetailsViewModel

<h1>@Model.Product.Name</h1>

<div class="card" style="width:100%; height:100%">
    <img class="card-img-top" src="/assets/products/@Model.Product.ImageLoc" 
    style="max-height: 500px; display:block" />
    
    <div class="card-body">
        <h5 class="card-title">@Model.Product.Name</h5>
        <p class="card-text">@Model.Product.Description</p>
    </div>

    <a asp-action="DeleteProduct" asp-route-id=@Model.Product.Id>Delete Product</a> @* products/deleteProduct/1 *@
</div>

